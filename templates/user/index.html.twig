{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
   {% if app.user is not null and is_granted('ROLE_USER') and not is_granted('ROLE_RH') %}
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            {# <th>Roles</th> #}
            <th>Password</th>
            <th>Name</th>
            <th>Firstname</th>
            <th>Picture</th>
            <th>Division</th>
            <th>Contract</th>
            <th>End_date</th>
            {# <th>actions</th> #}
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            {% if 'ROLE_USER' in user.roles and user.roles|length == 1 %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                    <td>{{ user.password }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.picture }}</td>
                    <td>{{ user.division }}</td>
                    <td>{{ user.contract }}</td>
                    <td>{{ user.endDate ? user.endDate|date('d-m-Y') : '' }}</td>
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endif %}
{% if app.user is not null and is_granted('ROLE_RH') %}
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
